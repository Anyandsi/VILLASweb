<h1>{{model.name}}</h1>

<div class="plot-toolbox">
  <h3>Toolbox</h3>
  {{#draggable-item content='chart'}}
    <span>Chart</span>
  {{/draggable-item}}

  {{#draggable-item content='table'}}
    <span>Table</span>
  {{/draggable-item}}

  {{#draggable-item content='value'}}
    <span>Value</span>
  {{/draggable-item}}
</div>

{{#draggable-dropzone dropped='addPlot'}}
  {{plot-container plots=model.plots editing=true data=data showPlotDialog='showPlotDialog'}}
{{/draggable-dropzone}}

<p>
  <button {{action 'cancelEdit'}}>Cancel</button>
  <button {{action 'saveEdit'}}>Save</button>
</p>

{{partial "dialog/plot/value"}}
